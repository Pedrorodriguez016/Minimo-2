<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/FechaText"
        android:layout_width="290dp"
        android:layout_height="71dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="Fecha de la denuncia"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TituloText"
        android:layout_width="298dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Asunto de la denuncia"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FechaText" />

    <EditText
        android:id="@+id/MensajeText"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Denuncia"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloText" />

    <Button
        android:id="@+id/Volverbtn"
        android:layout_width="195dp"
        android:layout_height="54dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="VolverOnClick"
        android:text="Volver al menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Enviarbtn"
        android:layout_width="306dp"
        android:layout_height="84dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="EnviarOnClick"
        android:text="Enviar denuncia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>